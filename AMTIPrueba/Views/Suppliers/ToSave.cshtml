    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="card">
    <div class="card-header">
        <h1>New Supplier To Product: @ViewBag.product.name</h1>
    </div>
    <div class="card-body">
        <form asp-action="ToSave" asp-controller="Suppliers" method="post">
            <input asp-for="product_id" class="form-control" type="hidden" value="@ViewBag.product_id">
            <div class="form-group">
                <label for="productClave">Product name</label>
                <input type="text" class="form-control" id="productClave" aria-describedby="emailHelp" placeholder="Enter clave" value="@ViewBag.product.name">
                <small id="inputClave" class="form-text text-muted">Product code.</small>
            </div>
            <div class="form-group">
                <label for="productClave">Supplier</label>
                <select asp-for="supplier_id" class="form-control" id="productType">
                    @foreach (var item in ViewBag.suppliers)
                    {
                        <option value="@item.ID">@item.name</option>
                    }
                </select>
                <small id="inputClave" class="form-text text-muted">Product code.</small>
            </div>
            <div class="form-group">
                <label for="productClave">Supplier Clave</label>
                <input asp-for="supplier_clave" type="text" class="form-control" id="productClave" aria-describedby="emailHelp" placeholder="Enter clave">
                <small id="inputClave" class="form-text text-muted">Product code.</small>
            </div>
            <div class="form-group">
                <label for="productPrice">Supplier Price</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="supplier_price" id="productPrice" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit changes</button>
            <a asp-action="ToEdit" asp-controller="Products" asp-route-productId="product_id" class="btn btn-warning">Back</a>
        </form>
    </div>
</div>