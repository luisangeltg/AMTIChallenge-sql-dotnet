@{
}

<div class="card">
    <div class="card-header">
        <h1>Edit Supplier Data In Product: @ViewBag.product.name</h1>
    </div>
    <div class="card-body">
        <form asp-action="ToEdit" asp-controller="Suppliers" method="post">
            <input asp-for="supplier_id" type="hidden" class="form-control">
            <input asp-for="product_id" type="hidden" class="form-control">
            <div class="form-group">
                <label for="productClave">Supplier</label>
                <input type="text" class="form-control" id="productClave" aria-describedby="emailHelp" placeholder="Enter clave" value="@ViewBag.supplier.name">
                <small id="inputClave" class="form-text text-muted">Product code.</small>
            </div>
            <div class="form-group">
                <label for="productClave">Clave</label>
                <input asp-for="supplier_clave" type="text" class="form-control" id="productClave" aria-describedby="emailHelp" placeholder="Enter clave">
                <small id="inputClave" class="form-text text-muted">Product code.</small>
            </div>
            <div class="form-group">
                <label for="productPrice">Price</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="supplier_price" id="productPrice" type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit changes</button>
            <a asp-action="ToEdit" asp-controller="Products" asp-route-productId="@ViewBag.supplier.ID" class="btn btn-warning">Back</a>
        </form>
    </div>
</div>